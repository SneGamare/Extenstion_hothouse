{
  "manifest_version": 3,
  "name": "Smart Autofill + Finance Nudge (MVP)",
  "version": "0.1.0",
  "description": "Autofill basics and show contextual FD/Credit Card nudges using simple rules (demo).",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Autofill MVP"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
